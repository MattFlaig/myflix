%section.sign_in.container
  .row
    .span7.offset1
      = form_tag sessions_path, class: 'sign_in' do
        %header
          %h1 Sign in
        %fieldset
          .form-group
            .row
              .span5
                = label_tag :email, "Email Address"
                = email_field_tag :email
          .form-group
            .row
              .span5
                = label_tag :password
                = password_field_tag :password
        %fieldset
          .form-group
            .action
              %input(type="submit" value="Sign in" class="btn btn-default")
              = link_to "Forgot Password?", forgot_password_path
