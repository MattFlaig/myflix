%section.admin_add_video
  .container
    .row
      .span10.offset1
        = bootstrap_form_for [:admin, @video], style: :horizontal do |f|
          %ul.nav.nav-tabs
            %li
              = link_to "Payments", admin_payments_path
            %li.active
              = link_to "Add a new video", new_admin_video_path
          %br
          %fieldset
            = f.text_field :title
            = f.select :category_id, options_for_select(Category.all.map {|category| [category.name, category.id]})
            = f.text_area :description, rows: 6
            %span.btn-file
              = f.file_field :large_cover
            %span.btn-file
              = f.file_field :small_cover
            = f.text_field :video_url, label: "Video URL"

          %fieldset.actions.form-group
            .span6.offset3
              %input(type="submit" value="Add Video" class="btn btn-default")